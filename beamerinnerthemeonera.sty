    \fi
    
    \ifx\insertgrant\@empty\else%
     \begin{beamercolorbox}[wd=0.95\paperwidth,#1]{grant}
       \usebeamercolor[fg]{author}\usebeamerfont{author}\granttitle\insertgrant%
     \end{beamercolorbox}
    \fi
    
    \ifx\inserttutor\@empty\else%
     \begin{beamercolorbox}[wd=0.95\paperwidth,#1]{tutor}
       \usebeamercolor[fg]{author}\usebeamerfont{author}\tutortitle\inserttutor%
     \end{beamercolorbox}
    \fi
    
    \begin{beamercolorbox}[wd=0.95\paperwidth,#1]{date}
      \usebeamerfont{author}\insertdate%
    \end{beamercolorbox}
     \vskip0.1cm%
