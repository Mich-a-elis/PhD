\defbeamertemplate*{title page}{onera}[1][]
{ 
   \vskip3cm%
    \begin{beamercolorbox}[wd=0.95\paperwidth,#1]{title page header}
      \usebeamerfont{title}\inserttitle%
    \end{beamercolorbox}%
    \vskip0.2cm%
